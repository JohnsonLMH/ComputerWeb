@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using ComputerWeb.Models.AccountViewModels
@using Microsoft.AspNetCore.Identity

@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager


<!doctype html>
<html>
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
<!--[if lt IE 9]>
	<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
	<script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
	<![endif]-->
<link rel="stylesheet" href="~/css/signin.css" type="text/css">
<title>Sign In</title>
</head>

<body>
	
	<!--登录-->
	<div>
		<div class="top-content">
			<div class="inner-bg">
				<div class="container">
					<div class="row">
						<div class="col-sm-6 col-sm-offset-3 form-box">
							<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" role="form" method="post" class="registration-form">
								<div class="form-top">
									<div class="form-top-left">
										<h3>账号登录</h3>
									</div>
									<div class="form-top-right">
										<i class="fa fa-user"></i>
									</div>
								</div>
								<div class="form-bottom">
									<div class="form-group">
										<label asp-for="Email" class="sr-only" for="Email">邮箱</label>
										<input asp-for="Email" type="text" name="Email" placeholder="Email..." class="form-last-name form-control" id="form-last-name" required autofocus>
									</div>
									<div class="form-group">
										<label asp-for="Password" class="sr-only" for="Password">密码</label>
										<input asp-for="Password" type="password" name="Password" placeholder="Password..." class="form-password form-control" id="form-password" required autofocus>
									</div>
									<div class="form-group">
										<div class="sol-sm-5">
											<div class="checkbox">
												<label asp-for="RememberMe">
													<input asp-for="RememberMe" type="checkbox">@Html.DisplayNameFor(m=>m.RememberMe)记住密码
												</label>
											</div>
										</div>
									</div>
									<div class="form-group">
										<div class="fogot col-sm-offset-2 col-sm-10">
											<a asp-action="ForgotPassword">Fogot Password</a>
											<input type="submit" value="Login">
										</div>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>	
	</div>

	<div class="container" id="summary-container">
		<hr class="divider">
		<div class="row">
			<div class="col-xs-6 col-sm-3 col-md-3">
				<img class="img-responsive" src="~/images/7.jpg">
				<p>7天无理由退货</p>
			</div>
			<div class="col-xs-6 col-sm-3 col-md-3">
				<img class="img-responsive" src="~/images/1522492278(1).png">
				<p>15天退货保障</p>
			</div>
			<div class="col-xs-6 col-sm-3 col-md-3">
				<img class="img-responsive" src="~/images/1522492294(1).png">
				<p>30天换货保障</p>
			</div>
			<div class="col-xs-6 col-sm-3 col-md-3">
				<img class="img-responsive" src="~/images/1522492315(1).png">
				<p>99元全场包邮</p>
			</div>
		</div>
	</div>
<!-- jQuery (Bootstrap 的 JavaScript 插件需要引入 jQuery) --> 
<script src="~/lib/jquery/jquery-1.11.0.min.js"></script> 
<!-- 包括所有已编译的插件 --> 
<script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
