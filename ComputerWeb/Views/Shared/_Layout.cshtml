@using Microsoft.AspNetCore.Identity
@using ComputerWeb.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width:device-width,initial-scale=1.0">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/Indexstyle.css" rel="stylesheet" type="text/css">
    <title>IndexDemo</title>
</head>

<body>
    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed"
                        data-toggle="collapse" data-target="#navbar-collapse"
                        aria-expanded="false">
                    <span class="sr-only">汉堡按钮</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">
                    <img src="~/images/logo.jpg" alt="###" />
                </a>

            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="mall">商城首页</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="News">新闻评测</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" role="button" aria-expanded="false" data-toggle="dropdown">
                            客户服务
                            <b class="caret"></b><!--↓箭头-->
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a asp-area="" asp-controller="Home" asp-action="personal">个人中心</a></li>
                            <li><a href="#">在线客服</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="afterservice">售后服务</a></li>
                            <li class="divider"></li><!--分割线-->
                            <li><a href="#">更多服务</a></li>
                        </ul>
                    </li>
                    <li><a href="#" data-toggle="modal" data-target="#about">关于我们</a></li>
                </ul>

                <div>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <p>@UserManager.GetUserName(User)</p>
                        <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post">
                            <a href="javascript:document.getElementById('logoutForm').submit()">注销</a>
                        </form>

                    }
                    else
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="register">
                                    <span class="glyphicon glyphicon-user"></span>
                                    注册
                                </a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="SignIn">
                                    <span class="glyphicon glyphicon-log-in"></span>
                                    登录
                                </a>
                            </li>
                        </ul>
                    }
                    
                </div>
            </div>

        </div>
    </nav>

    @RenderBody()
    <hr>
    <div class="container" id="summary-container">
        <div class="row">
            <div class="col-sm-12">
                <div class="row feature">
                    <div class="col-xs-6 col-sm-3 col-md-3">
                        <h3>友情链接</h3>
                        <ul>
                            <li><a>淘宝网</a></li>
                            <li><a>京东商城</a></li>
                            <li><a>中关村在线</a></li>
                        </ul>
                    </div>
                    <div class="col-xs-6 col-sm-3 col-md-3">
                        <h3>关于我们</h3>
                        <ul>
                            <li><a>了解我们</a></li>
                            <li><a>加入我们</a></li>
                        </ul>
                    </div>
                    <div class="col-xs-6 col-sm-3 col-md-3">
                        <h3>服务支持</h3>
                        <ul>
                            <li><a>自助服务</a></li>
                            <li><a>技术支持</a></li>
                            <li><a>售后服务</a></li>
                        </ul>
                    </div>
                    <div class="col-xs-6 col-sm-3 col-md-3">
                        <h3>123-123-1234</h3>
                        <button type="button" class="zaixiankefu">在线客服</button>
                        <p class="worktime">周一至周日 9:00 - 22:00</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- footer 开始-->
    <footer class="footer">
        <div class="container">
            <div class="footer-left">
                <p>Copyrights © 2018 Bootstrap ZHBIT响应式网站  | 版权所有 <a href="#"></a></p>
            </div>
            <div class="footer-right">
                <ul>
                    <li><a href="#"><i class="glyphicon glyphicon-phone-alt">&nbsp;联系我们</i></a></li>
                    <li><a href="#"><i class="glyphicon glyphicon-map-marker">&nbsp;公司地址</i></a></li>
                    <li><a href="#"><i class="glyphicon glyphicon-question-sign">&nbsp;服务声明</i></a></li>

                </ul>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery-1.11.0.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
</body>
</html>

